<script>
    // Factor de multiplicaciÃ³n por cada variante (20% extra)
    const FACTOR_VARIANTE = 0.20; 

    function calcularTarifas() {
        // 1. OBTENER VALORES DE INPUTS
        const tarifaInput = document.getElementById('tarifaHora').value;
        const horasInput = document.getElementById('horas').value;
        const velocidadInput = document.getElementById('velocidad').value;
        
        let tarifaBase = parseFloat(tarifaInput);
        const horas = parseFloat(horasInput);
        const VELOCIDAD_KMH = parseFloat(velocidadInput);

        // 2. VALIDACIÃ“N BÃSICA
        if (isNaN(tarifaBase) || tarifaBase < 0 || 
            isNaN(horas) || horas <= 0 || 
            isNaN(VELOCIDAD_KMH) || VELOCIDAD_KMH <= 0) 
        {
            const errorMsg = 'Error. Ingrese valores numÃ©ricos vÃ¡lidos.';
            document.getElementById('tarifaFinal').textContent = errorMsg;
            document.getElementById('costoKm').textContent = errorMsg;
            document.getElementById('distancia').textContent = errorMsg;
            document.getElementById('costoTotal').textContent = errorMsg;
            return;
        }

        // 3. APLICAR MODIFICADORES DE TARIFA
        let numModificadores = 0;
        
        if (document.getElementById('lluvia').checked) {
            numModificadores++;
        }
        if (document.getElementById('nocturno').checked) {
            numModificadores++;
        }
        if (document.getElementById('festivo').checked) {
            numModificadores++;
        }
        
        // Multiplicador total: 1 + (nÃºmero de modificadores * factor de cada uno)
        const multiplicadorTotal = 1 + (numModificadores * FACTOR_VARIANTE);
        
        // Tarifa Final = Tarifa Base * Multiplicador
        const TARIFA_FINAL_HORA = tarifaBase * multiplicadorTotal;

        // 4. CÃLCULOS FINALES
        
        // Costo por KM (Tarifa Final / Velocidad)
        const COSTO_POR_KM = TARIFA_FINAL_HORA / VELOCIDAD_KMH;

        // Costo Total (Horas * Tarifa Final)
        const costoTotal = horas * TARIFA_FINAL_HORA;
        
        // Distancia Recorrida (Horas * Velocidad)
        const distancia = horas * VELOCIDAD_KMH;

        // 5. MOSTRAR RESULTADOS
        document.getElementById('tarifaFinal').textContent = `$${TARIFA_FINAL_HORA.toFixed(2)} MXN`;
        document.getElementById('costoKm').textContent = `$${COSTO_POR_KM.toFixed(2)} MXN`;
        document.getElementById('distancia').textContent = `${distancia.toFixed(1)} Km`;
        document.getElementById('costoTotal').textContent = `$${costoTotal.toFixed(2)} MXN`;
    }

    // Inicializar el cÃ¡lculo al cargar la pÃ¡gina
    window.onload = calcularTarifas; 
</script>  

